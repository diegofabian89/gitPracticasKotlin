<?xml version="1.0" encoding="utf-8"?>
<!--si usamos el layoutlineal en vez de constrain layout estamos obligados
a andir el comportamiento segun sea horizontal o vertical con orientation -->
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_marginTop="0dp"
    android:background="@color/black"
    >
    <!--<TextView
        android:id="@+id/texto"
        android:textSize="40sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

     layout secundario que contiene los botones en orientacion vertical-->



    <Button
        android:id="@+id/btsegundaVentana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click para ver el conteo"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="250dp">
    <Button
        android:id="@+id/boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:text="Agregar" />

    <Button
        android:id="@+id/bReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:text="Resetear" />
</LinearLayout>

</LinearLayout>